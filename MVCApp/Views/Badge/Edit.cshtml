@model MVCApp.ViewModels.BadgeEditViewModel
@{
    Layout = "_BadgeLayout.cshtml";
}

@section breadcrumb{
    <li>
        @ViewBag.PageName
    </li>
}
<body>
    <div class="col-md-12 container-table">
        @using (Html.BeginForm("Edit", "Badge", FormMethod.Post, new { @class = "form-horizontal col-md-12", name = "edit_badge", enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Title)
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "name", id = "person_name", edit_id = @Model.Id })
                @Html.ValidationMessageFor(m => m.Title)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Image)
                @if (Model.ImageUrl != null)
                {
                    <br>
                    @Html.LabelFor(m => m.DeleteImage)
                    @Html.CheckBoxFor(m => m.DeleteImage, new { id = "delete_check" })
                    @Html.TextBoxFor(m => m.Image, new { @class = "form-control", type = "file", id = "uploadedImage" })
                    @Html.ValidationMessageFor(m => m.Image)
                }
                else
                {
                    @Html.TextBoxFor(m => m.Image, new { @class = "form-control", type = "file", id = "uploadedPhoto" })
                    @Html.ValidationMessageFor(m => m.Image)
                }
            </div>
            <input type="submit" class="btn btn-primary" Value="Save Changes" />
            @Html.ActionLink("Cancel", "Index", "Badge", null, new { @class = "btn-danger btn" })
        }
    </div>
</body>

