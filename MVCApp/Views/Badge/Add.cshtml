@model MVCApp.ViewModels.BadgeCreateViewModel


<body>
    <div class="col-md-12 container-table">
        <h3>Add Badge: </h3>
        <form id="badge_form" class="form-horizontal col-md-12">
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Title)
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "title of a badge", id="badgeTitle" })
                @Html.ValidationMessageFor(m => m.Title)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "description of a badge", id="badgeDescription" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Image)
                @Html.TextBoxFor(m => m.Image, new { @class = "form-control", type = "file", id = "uploadedImage" })
                @Html.ValidationMessageFor(m => m.Image)
            </div>
            <input type="submit" class="btn btn-primary" Value="Add" />
        </form>
    </div>
</body>
