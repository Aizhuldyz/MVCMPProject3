@model MVCApp.ViewModels.BadgeCreateViewModel

@{
    Layout = "_BadgeLayout.cshtml";
}

@section breadcrumb{
    <li>
        @ViewBag.PageName
    </li>
}
<body>
    <div class="col-md-12 container-table">
            @using (Html.BeginForm("Add", "Badge", FormMethod.Post, new { @class = "form-horizontal col-md-12", name="add_badge" ,enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Title)
                    @Html.TextBoxFor(m => m.Title, new {@class="form-control", placeholder="title of a badge"})
                    @Html.ValidationMessageFor(m => m.Title)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Description)
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "description of a badge" })
                    @Html.ValidationMessageFor(m => m.Description)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Image)
                    @Html.TextBoxFor(m => m.Image, new { @class = "form-control", type="file", id = "uploadedImage" })
                    @Html.ValidationMessageFor(m => m.Image)
                </div>
                <input type="submit" class="btn btn-primary" Value="Add" />
            }
</div>      
</body>