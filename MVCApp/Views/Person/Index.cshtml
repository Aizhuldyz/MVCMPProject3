@model IEnumerable<MVCApp.Models.PersonViewModel>

    <div class="col-md-12">
        <div class="col-md-5">
            <form class="form-horizontal col-md-12">
                <div class="form-group">
                    <label for="person_name">Name</label>
                    <input id="person_name" type="text" class="form-control" placeholder="name"/>
                </div>
                <div class="form-group">
                    <label for="birthdate">Birthdate</label>
                    <input id="birthdate" type="datetime" class="form-control" name="Birthdate" placeholder="in dd/mm/yyyy format"/>
                </div>
                <button type="submit" id="btn_add" class="btn btn-primary">Add</button>
            </form>
        </div>
        <div class="col-md-5 table-responsive">
            <table class="table table-striped">
                <tr class="table-header">
                    <td>Name</td>
                    <td>Birthdate</td>
                    <td>Age</td>
                    <td>Delete</td>
                </tr>
                @foreach (var person in @Model)
                {
                    <tr>
                        <td>@person.Name</td>
                        <td>@person.BirthDate.ToString("yy-mm-dd")</td>
                        <td>@person.Age</td>
                        <td><a id="delete_person" href="Person/Delete?id=@person.Id">Delete</a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
