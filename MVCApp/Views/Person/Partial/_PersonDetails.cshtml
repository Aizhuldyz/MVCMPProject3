
@model IEnumerable<MVCApp.ViewModels.PersonViewModel>
<div class="col-md-6">
    <table id="person_table" class="table table-striped">
        <tr class="table-header">
            <th>Photo</th>
            <th>Name</th>
            <th>Birthdate</th>
            <th>Age</th>
        </tr>
        @foreach (var person in Model)
        {
            <tr id="@person.Id">
                <td>
                    <img src="@Url.Action("GetPhoto", "Person", new {personId = @person.Id, fileName = @person.PhotoUrl})" class="photoImg" />
                </td>
                <td name="name">@person.Name</td>
                <td name="birthDate">@person.BirthDate.ToString("MM/dd/yyyy")</td>
                <td>@person.Age</td>
            </tr>
        }
    </table>
</div>