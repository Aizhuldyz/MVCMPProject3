@model MVCApp.ViewModels.PersonEditViewModel

<h3>Edit Person</h3>
<form id="person_form_edit" class="form-horizontal col-md-12">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new {@class = "form-control", placeholder = "name", id = "person_name", edit_id = @Model.Id})
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BirthDate)
        @Html.TextBoxFor(m => m.BirthDate, "{0:MM/dd/yyyy}", new {@class = "form-control", id = "birthdate"})
        @Html.ValidationMessageFor(m => m.BirthDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Photo)
        @if (Model.PhotoUrl != null)
        {
            <br>
            @Html.LabelFor(m => m.DeletePhoto)
            @Html.CheckBoxFor(m => m.DeletePhoto, new {id = "delete_check"})
            @Html.TextBoxFor(m => m.Photo, new {@class = "form-control", type = "file", id = "uploadedPhoto"})
            @Html.ValidationMessageFor(m => m.Photo)
        }
        else
        {
            @Html.TextBoxFor(m => m.Photo, new {@class = "form-control", type = "file", id = "uploadedPhoto"})
            @Html.ValidationMessageFor(m => m.Photo)
        }
    </div>
    <input type="submit" class="btn btn-primary" Value="Save Changes"/>
    @Html.ActionLink("Cancel", "Index", "Person", null, new {@class = "btn-danger btn"})
</form>
